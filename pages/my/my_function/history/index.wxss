
.movie_content {
  padding: 10px;
  background-color: #fff;
  color: #787878;
  border-top: 1px solid #eaeaea;
  border-bottom: 1px solid #eaeaea;
  display: flex;
}
.movie_content image {
  display: block;
  width: 65px;
  height: 95px;
}
.item_middle {
  flex: 1;
  margin-left: 23px;
  padding-top: 14px;
  overflow: hidden;
}
.item_middle view{
  margin-top: 0.4em;
}
.item_middle .move_name {
  font-size: 16px;
  color: #333;
}

.item_middle .move_actor {
  font-size: 12px;
  color: #666;
  margin: 2px 0px;
}

.item_right .move_score {
  font-size: 12px;
  color: #cf616a;
}
.item_right{
  background-color: sandybrown;
  height: fit-content;
  margin-top: 1.5em;
}
.item_right .btn_del{
  font-size: 16px;
  color: white;
}

