/* index.wxss */
Page {
  height: 100%;
  background: #fff;
}

.flex {
  display: flex;
}
.flex-align-center {
  display: flex;
  align-items: center;
}
.flex-bottom {
  justify-content: flex-end;
}

/* 轮播 */
.imageContainer{
  width: 100%;
  height: 500rpx;
  background: #333;
}
.item{
  height: 500rpx;
}
.itemImg{
  position: absolute;
  width: 40%;
  height: 380rpx;
  border-radius: 15rpx;
  z-index: 1;
  opacity: 0.7;
  top: 13%;
  margin: 1px;
}
.active{
  opacity: 1;
  z-index: 10;
  height: 350rpx;
  width: 260rpx;
  top: 15%;
  transition:all .2s ease-in 0s;
}

/* 日期 */
 .scroll-view_H{
  display: flex;
  flex-wrap: nowrap;
  overflow: hidden;
  flex: none;
  white-space: nowrap;
  background: #fff;
  box-sizing: border-box;
 }
 .scroll-view{
  display: flex;
  align-items: center;
  padding: 0 28rpx;
  background-color: #fff;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 99;
  box-sizing: border-box;
 }

 .scroll-view view{
  color: #333;
  font-size: 26rpx;
  margin-right:20rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  z-index: 1;
 }

 .select::after{
  position: absolute;
  left: 0;
  bottom: 0rpx;
  width: 100%;
  height: 6rpx;
  content: "";
  display: block;
  background-image: linear-gradient(270deg, #FBA649 0%, #F56D23 100%);
  border-radius: 8px;
 }

 /* 场次 */
 .cinemaBox {
  display: flex;
  flex-direction: column;
  margin: 30rpx 0 30rpx 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 4rpx solid #f5f5f5;
}
.seatList{
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.seatFirWidth{
  display: flex;
  flex: 1;
  width: 280rpx;
}
.show_time{
  font-size: 35rpx;
  color: #333;
  margin-bottom: 15rpx;
}
.seatVersion{
  text-align: left;
  font-family: PingFangSC-Medium;
  font-size: 20rpx;
  color: #666;
  margin: 15rpx 0 28rpx 3px ;
}
.cinema_name {
  font-size: 20rpx;
  color: #666;
}
.movieClo{
  width: 114rpx;
  font-size: 22rpx;
  color: #333;
}


.seatColor {
  color: #D55450;
}


.buyTick {
  font-size: 26rpx;
  color: #F56D23;
  margin: 0 30rpx 0 40rpx;
  padding: 10rpx 25rpx ;
  border: 2rpx solid #F56D23;
  border-radius: 28.5rpx;
}